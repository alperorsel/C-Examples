
char ceviri[] = "sos";

int note = 800;     
int audio = 7; 
int led = 9;    
     


int noktaLen = 100;     
int cizgiLen = noktaLen * 3;     
int duraksama = noktaLen;
int kelime_arasi = noktaLen * 7; 


void setup() {                
  pinMode(led, OUTPUT); 
}


void loop()
{ 
  int i = 0;
  while( i < sizeof(ceviri) - 1)
  {
  char harf = ceviri[i];
  harf = toLowerCase(harf);
  GetChar(harf);
  i= i + 1;
  }
  delay(8000);      
}

void cizgi()
{
  digitalWrite(led, HIGH);     
  tone(audio, note, cizgiLen);  
  delay(cizgiLen); 
  digitalWrite(led, LOW);       
  noTone(audio);            
  delay(duraksama);              
}


void nokta()
{
  digitalWrite(led, HIGH);    
  tone(audio, note, noktaLen); 
  delay(noktaLen);
  digitalWrite(led, LOW);       
  noTone(audio);            
  delay(duraksama);       
}


